# Environment Variables Template for Books Application
# Copy this file to .env and customize the values for your environment

# Database Configuration
MYSQL_DATABASE=booksDB
MYSQL_USER=yu71
MYSQL_PASSWORD=53cret
MYSQL_ROOT_PASSWORD=rootpassword

# Spring Boot Configuration
SPRING_PROFILES_ACTIVE=docker
SERVER_PORT=8080

# JVM Configuration (for Java 25)
JAVA_OPTS=-Xmx512m -Xms256m --enable-native-access=ALL-UNNAMED --add-opens=java.base/java.lang=ALL-UNNAMED --add-opens=java.base/java.util=ALL-UNNAMED

# Optional: Custom database host (if using external MySQL)
# MYSQL_HOST=localhost
# MYSQL_PORT=3306